<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <NumberPicker
        android:id="@+id/yearPicker"
        android:layout_width="239dp"
        android:layout_height="157dp"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.305" />

    <TextView
        android:id="@+id/datePopielec"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonRobocze"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toEndOf="@+id/textPopielec"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.375" />

    <TextView
        android:id="@+id/dateAdwent"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonRobocze"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toEndOf="@+id/textAdwent"
        app:layout_constraintTop_toBottomOf="@+id/dateBCialo"
        app:layout_constraintVertical_bias="0.285" />

    <TextView
        android:id="@+id/textBCialo"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp"
        android:text="@string/boze_cialo"
        app:layout_constraintBottom_toTopOf="@+id/buttonNiedziele"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/yearPicker"
        app:layout_constraintTop_toBottomOf="@+id/textWielkanoc"
        app:layout_constraintVertical_bias="0.178" />

    <TextView
        android:id="@+id/dateBCialo"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonRobocze"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toEndOf="@+id/textBCialo"
        app:layout_constraintTop_toBottomOf="@+id/dateWielkanoc"
        app:layout_constraintVertical_bias="0.341" />

    <TextView
        android:id="@+id/textWielkanoc"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="50dp"
        android:text="@string/wielkanoc"
        app:layout_constraintBottom_toTopOf="@+id/buttonNiedziele"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/yearPicker"
        app:layout_constraintTop_toBottomOf="@+id/textPopielec"
        app:layout_constraintVertical_bias="0.168" />

    <TextView
        android:id="@+id/textAdwent"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:text="@string/adwent"
        app:layout_constraintBottom_toTopOf="@+id/buttonNiedziele"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/yearPicker"
        app:layout_constraintTop_toBottomOf="@+id/textBCialo"
        app:layout_constraintVertical_bias="0.318" />

    <TextView
        android:id="@+id/textPopielec"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="70dp"
        android:text="@string/popielec"
        app:layout_constraintBottom_toTopOf="@+id/buttonNiedziele"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/yearPicker"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.369" />

    <TextView
        android:id="@+id/dateWielkanoc"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonRobocze"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toEndOf="@+id/textWielkanoc"
        app:layout_constraintTop_toBottomOf="@+id/datePopielec"
        app:layout_constraintVertical_bias="0.161" />

    <Button
        android:id="@+id/buttonNiedziele"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_marginEnd="25dp"
        android:text="@string/niedziele"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonRobocze"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/yearPicker"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.827" />

    <Button
        android:id="@+id/buttonRobocze"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:text="@string/dni_robocze"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.974"
        app:layout_constraintStart_toEndOf="@+id/yearPicker"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.825" />

</androidx.constraintlayout.widget.ConstraintLayout>